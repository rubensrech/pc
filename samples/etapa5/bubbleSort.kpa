int arr[5];

int main() {
    arr[0] = 5;
    arr[1] = 4;
    arr[2] = 3;
    arr[3] = 2;
    arr[4] = 1;

    int tmp;

    for (int i <= 0: i < 4: i = i + 1) {
        for (int j <= 0: j < 4 - i: j = j + 1) {
            if (arr[j] > arr[j+1]) then {
                // Swap arr[j] <-> arr[j+1]
                tmp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = tmp;
            }
        }
    }

}